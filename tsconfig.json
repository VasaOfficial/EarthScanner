{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "sourceMap": true,
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "outDir": "dist/",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strict": false
  },
  "include": [
    ".eslintrc.cjs",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.cjs",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "app/clientLib.ts",
    "app/components/Earth.tsx",
    "app/components/Scene.jsx",
    "utils/Prism.tsx"
  ],
  "exclude": ["node_modules", "**/*.jsx"]
}
